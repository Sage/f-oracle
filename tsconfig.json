{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "outDir": "build",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": true
    },
    "include": ["index.ts", "lib/**/*"]
}
